<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/itemColor"
    android:layout_height="150dp">


    <ImageView
        android:id="@+id/imgCell"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Air Max"
        android:textColor="@color/white"
        android:fontFamily="@font/bungee"
        app:layout_constraintBottom_toBottomOf="@+id/imgCell"
        app:layout_constraintStart_toEndOf="@+id/imgCell"
        app:layout_constraintTop_toTopOf="@+id/imgCell"></TextView>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="$399"
        android:layout_marginLeft="16dp"
        android:textColor="@color/itemPriceColor"
        app:layout_constraintBottom_toBottomOf="@+id/imgCell"
        app:layout_constraintStart_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/imgCell">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>